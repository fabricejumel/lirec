rule "subject"
	no-loop true
	when
		$q: SAQuery(question == "subject")
		$cad: CandidateActionDetail( phase == $q.numKnownVar )
		$ad: ActionDetail($s: subject) from $cad.actionDetail		
	then			
		modify ($q) {
			setAnswers($s)
		}
		System.out.println("Subject " + $s);
		System.out.println("Retracted " + $ad.getID() + "\n");
		retract ($cad);			
end

