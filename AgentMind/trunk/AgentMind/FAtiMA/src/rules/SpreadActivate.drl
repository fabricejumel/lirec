import FAtiMA.memory.ActionDetail;
import FAtiMA.memory.eventQuery.SAQuery;
import FAtiMA.memory.eventQuery.CandidateActionDetail;


rule "subject-subject"
	no-loop true
	when
		$q: SAQuery($s1: subject)
		$cad: CandidateActionDetail(subject != true)
		$ad: ActionDetail(subject == $s1) from $cad.actionDetail		
	then		
		//insert (new CandidateActionDetail($ad, "p1", "s-s"));
		//retract ($ad);
		modify ($cad)
		{
			increasePhase(), 
			setExtension("subject"),
			setSubject(true)		
		}
		System.out.println("Subject " + $s1);
		System.out.println("subject-subject " + $ad.getID());
end

