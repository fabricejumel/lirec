	<MotivationalParameters>
		<MotivationalParameter motivator="Affiliation" decayFactor="2" weight="0.075" intensity="6"/>
		<MotivationalParameter motivator="Integrity" decayFactor="1.5" weight="0.05" intensity="4"/>
		<MotivationalParameter motivator="Energy" decayFactor="2" weight="0.055" intensity="5"/>
		<MotivationalParameter motivator="Certainty" decayFactor="4" weight="0.065" intensity="4"/>
		<MotivationalParameter motivator="Competence" decayFactor="3" weight="0.05" intensity="4"/>
	</MotivationalParameters>
	
	<Goals>
	</Goals>
	
	<InterpersonalRelations>
		<Relation target="ShrubSpirit" like="3" respect="10"/>
		<Relation target="CoverSpirit" like="2" respect="1"/>
        <Relation target="tree-grow-a" like="6" respect="1"/>
        <Relation target="tree-fruit-a" like="2" respect="1"/>
        <Relation target="tree-fruit-b" like="4" respect="1"/>
        <Relation target="tree-fruit-c" like="6" respect="1"/>
        <Relation target="tree-ill-a" like="-4" respect="1"/>
        <Relation target="tree-ill-b" like="-6" respect="1"/>
        <Relation target="tree-ill-c" like="-8" respect="1"/>
        <Relation target="tree-decay-a" like="-1" respect="1"/>
        <Relation target="tree-decay-b" like="-2" respect="1"/>
        <Relation target="tree-decay-c" like="-3" respect="1"/>
        <Relation target="tree-recovery-to-b" like="10" respect="1"/>
        <Relation target="tree-recovery-to-a" like="7" respect="1"/>
        <Relation target="tree-finished-recovery" like="10" respect="1"/>
        <Relation target="tree-benefit" like="16" respect="10"/>
        <Relation target="tree-detriment" like="-16" respect="10"/>
	</InterpersonalRelations>
	
	<EventReactions>

		<!-- General emotional reactions used in more than one episode -->
	
		<EmotionalReaction desirability="3" desirabilityForOther="1" praiseworthiness="5"> 
			<Event subject="*" action="flower"/>
		</EmotionalReaction>

		<EmotionalReaction desirability="-3" desirabilityForOther="-1" praiseworthiness="-2"> 
			<Event subject="*" action="drop-leaves"/>
		</EmotionalReaction>
		
	</EventReactions>
	
	<ActionTendencies>
		
		<!-- Generic action tendencies -->
		<ActionTendency action="flower([Target])">
			<Preconditions>
            </Preconditions>
			<ElicitingEmotion type="Love" minIntensity="4">
				<CauseEvent/>
			</ElicitingEmotion>
		</ActionTendency>

		<ActionTendency action="drop-leaves([Target])">
			<Preconditions>
            </Preconditions>
			<ElicitingEmotion type="Hate" minIntensity="4">
				<CauseEvent/>
			</ElicitingEmotion>
		</ActionTendency>

		<ActionTendency action="diagnose([Target])">
			<Preconditions>
            </Preconditions>
			<ElicitingEmotion type="Hate" minIntensity="1">
				<CauseEvent/>
			</ElicitingEmotion>
		</ActionTendency>
       
	</ActionTendencies>
</Character>
